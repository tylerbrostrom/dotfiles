alias cp="cp -i"

# for working in dotfiles bare repo
alias dotf='git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME'
alias ldotf='lazygit --git-dir=$HOME/.dotfiles.git --work-tree=$HOME'

alias exa="exa -lah --git --group-directories-first --no-user --no-time --octal-permissions --no-permissions"
alias grep="grep -i --color=auto"
alias lg="lazygit"
alias ls="gls -af1 --color=auto --hyperlink=auto"
alias mkdir="mkdir -p"
alias mv="mv -i"
alias sqlite="$(brew --prefix)/opt/sqlite/bin/sqlite3"
alias top="htop"
alias tree="tree -af -i '.git|node_modules'"
alias vim="nvim"
alias which="which -a"
