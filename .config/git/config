# Watch out for configs that land in ~/.gitconfig still

[user]
	# https://stackoverflow.com/questions/42553685/setting-git-username-and-email-without-using-gitconfig
[include]
	# The values in the [user] section are set here
	path = ~/.config/dotfiles.local/git/config.local
[core]
	editor = $EDITOR
	filemode = false
[pull]
	ff = only
[push]
	default = simple
[submodule]
	recurse = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
[alias]
	# config/users
	whoami = !git config user.name && git config user.email

	# commit {{
	ci = commit -v
	wip = !git add -A && git commit -m "WIP"
	checkpoint = !git add -A && git commit -m "Checkpoint $(date -u +'%Y-%m-%dT%H:%M:%SZ')"
	# }}

	co = checkout
	df = diff
	lo = log --graph --oneline
	lo-ls = log --oneline --name-status # list commitsâ€™ files
	st = status -sb

[init]
	defaultBranch = main

[checkout]
	defaultRemote = origin

[diff]
	tool = kitty
	guitool = kitty.gui

[difftool]
	prompt = false
	trustExitCode = true

[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
	cmd = kitty kitty +kitten diff $LOCAL $REMOTE

