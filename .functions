function path() {
    echo -e ${PATH//:/\\n}
}

function github() {
    open "https://github.com/$(git remote get-url origin | cut -d ':' -f 2 | cut -d '.' -f 1)"
}

function deps() {
    echo '\nChecking ~/.Brewfile…\n'
    brew bundle --global --verbose check

    echo '\nChecking for unneeded forulae…\n'
    brew autoremove --dry-run
}
