# manage dotfiles. see guide: https://www.atlassian.com/git/tutorials/dotfiles
alias dotfiles="`which git` --git-dir=$HOME/.dotfiles-repo/ --work-tree=$HOME"

alias cleanup=" brew cleanup --prune=all"

alias cp="cp -i"
alias exa="exa -lah --git --group-directories-first --no-user --no-time --octal-permissions --no-permissions"
alias grep="grep -i --color=auto"
alias ls="ls -AGF1"
alias mkdir="mkdir -p"
alias mv="mv -i"
alias rg="rg --smart-case"
alias top="htop"
alias tree="tree -aF -I '.git|node_modules' | less"
